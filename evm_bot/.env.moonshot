# ============================================================================
# MOONSHOT CONFIGURATION - Fast 3x+ Trades
# Optimized for: $5 trades, max 1 day hold, 3x minimum target
# Risk Level: VERY HIGH
# ============================================================================

# This configuration is designed for aggressive moonshot hunting with:
# - Very small position sizes ($5 per trade)
# - Short hold times (max 24 hours)
# - High profit targets (3x-10x)
# - Early entry on micro-caps
# - Multiple concurrent positions

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSC_WSS_URL=wss://bsc-ws-node.nariox.org:443
CHAIN_ID=56

# ============================================================================
# WALLET CONFIGURATION
# ============================================================================

# Your private key (REQUIRED for auto-trading)
PRIVATE_KEY=your_private_key_here

# ============================================================================
# MOONSHOT TRADING CONFIGURATION
# ============================================================================

# Enable auto-trading
AUTO_TRADE=false

# Small position size - $5 per trade
# At BNB = $600, this is ~0.0083 BNB
# Adjust based on current BNB price
TRADE_AMOUNT_BNB=0.0083

# More concurrent positions since we're trading small amounts
# With $5 per trade, 10 positions = only $50 total exposure
MAX_CONCURRENT_POSITIONS=10

# Minimum balance to keep (keep low for max capital deployment)
MIN_BNB_BALANCE=0.02

# ============================================================================
# SLIPPAGE & GAS - OPTIMIZED FOR SPEED
# ============================================================================

# Higher slippage for micro-caps and fast execution
# Early tokens often have high slippage
SLIPPAGE_PERCENT=20

# Aggressive gas for front-running other buyers
# Higher = faster execution = better entry price
GAS_PRICE_MULTIPLIER=1.5

# Willing to pay more for speed
MAX_GAS_PRICE_GWEI=30

# ============================================================================
# MOONSHOT RISK MANAGEMENT
# ============================================================================

# Wider stop-loss (micro-caps are volatile)
# Give room for price swings
STOP_LOSS_PERCENT=50

# High take-profit for moonshots (3x minimum)
# Will actually target higher with trailing stop
TAKE_PROFIT_PERCENT=300

# CRITICAL: Use trailing stop to capture 5x-10x moves
USE_TRAILING_STOP=true

# Tight trailing stop (30% from peak)
# Locks in profits quickly on the way down
TRAILING_STOP_PERCENT=30

# Max hold time: 24 hours (86400 seconds)
# Cut losers fast, don't baghold
MAX_HOLD_TIME_SECONDS=86400

# Only sell at take-profit if we're at least 2x
# Don't settle for small wins on moonshots
MIN_PROFIT_PERCENT=200

# ============================================================================
# MOONSHOT TOKEN FILTERS - VERY AGGRESSIVE
# ============================================================================

# Lower quality threshold to catch more opportunities
# We want high-risk, high-reward tokens
MINIMUM_QUALITY_SCORE=50

# -------------------- Liquidity Filters --------------------

# VERY LOW minimum liquidity (catch tokens at launch)
# Lower liquidity = higher risk BUT higher potential
MIN_LIQUIDITY_BNB=2

# Keep max reasonable to ensure we can exit
MAX_LIQUIDITY_BNB=50

# Optimal range for moonshots (very early stage)
OPTIMAL_LIQUIDITY_MIN_BNB=3
OPTIMAL_LIQUIDITY_MAX_BNB=20

# -------------------- Market Cap Filters --------------------

# MICRO-CAP range for maximum upside
# Lower entry = higher potential multiplier
MARKET_CAP_MIN_USD=1000
MARKET_CAP_MAX_USD=50000

# Upper limit (tokens above this have less upside)
MARKET_CAP_UPPER_LIMIT_USD=100000

# BNB price (update this to current price)
BNB_PRICE_USD=1000

# -------------------- Security Filters --------------------

# Keep honeypot check (CRITICAL - prevents 100% losses)
CHECK_HONEYPOT=true

# Be more lenient on taxes (moonshots often have fees)
MAX_BUY_TAX_PERCENT=15
MAX_SELL_TAX_PERCENT=20

# Don't require verification (most new tokens aren't verified yet)
REQUIRE_VERIFIED_CONTRACT=false
REQUIRE_OWNERSHIP_RENOUNCED=false
REQUIRE_LIQUIDITY_LOCKED=false

# -------------------- Holder Distribution --------------------

# More lenient (early tokens have concentrated holdings)
MAX_TOP_HOLDER_PERCENT=80
MAX_TOP_10_HOLDERS_PERCENT=95

# Lower minimum holders (catch very early)
MIN_HOLDERS_COUNT=20

# ============================================================================
# AGGRESSIVE SCORE WEIGHTS
# ============================================================================

# Emphasize liquidity and market cap over security
# We want early entry, accept higher risk
SCORE_WEIGHT_LIQUIDITY=30
SCORE_WEIGHT_MARKET_CAP=30
SCORE_WEIGHT_SECURITY=20
SCORE_WEIGHT_HOLDERS=10
SCORE_WEIGHT_CONTRACT=10

# ============================================================================
# TELEGRAM CONFIGURATION
# ============================================================================

TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Send ALL alerts (you want to know everything)
SEND_DETECTION_ALERTS=true
SEND_TRADE_ALERTS=true
SEND_EXIT_ALERTS=true
SEND_ERROR_ALERTS=true

# ============================================================================
# MOONSHOT MONITORING
# ============================================================================

# Check positions more frequently (every 15 seconds)
# Fast moves require fast reactions
POSITION_CHECK_INTERVAL=15

# Update prices frequently
PRICE_UPDATE_INTERVAL=5

# Aggressive retries
RPC_RETRY_ATTEMPTS=3
RPC_RETRY_DELAY=1

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
VERBOSE=false
SAVE_ALL_TOKENS=true

# ============================================================================
# MOONSHOT MODE INDICATORS
# ============================================================================

# Start with dry run to test
DRY_RUN=false

# Don't use trading profiles (custom moonshot config)
TRADING_PROFILE=

# ============================================================================
# EXPECTED PERFORMANCE
# ============================================================================

# With these settings, expect:
# - 10-30 trades per day
# - 20-30% win rate (high risk strategy)
# - Winners: 3x-10x (occasionally higher)
# - Losers: -50% (stopped out)
# - Risk/Reward: Good if you hit 1-2 moonshots per week
# - Daily volatility: HIGH (can lose 50% or gain 300% in a day)

# CAPITAL REQUIREMENTS:
# - Minimum: $100 (for 10 x $5 trades + gas)
# - Recommended: $200-500 (allows for more trades + gas buffer)

# GAS COSTS:
# - ~$0.30-0.50 per buy
# - ~$0.30-0.50 per sell
# - ~$1 total per trade
# - On $5 trades, gas is ~20% of trade size
# - Need to hit 1.25x just to break even on gas!

# STRATEGY NOTES:
# 1. This is a high-volume, low-win-rate strategy
# 2. You need big wins (5x-10x) to offset many small losses
# 3. Gas costs are significant relative to position size
# 4. Consider increasing to $10-20 per trade if gas is too high
# 5. Monitor first few days in DRY_RUN mode
# 6. Expect to lose on 70% of trades - the 30% winners must be BIG

# ============================================================================
