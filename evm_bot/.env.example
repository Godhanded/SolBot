# ============================================================================
# EVM BOT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# BSC RPC endpoint (REQUIRED)
# Get a free one from: https://chainlist.org/chain/56
# Or use paid services like Infura, Alchemy, QuickNode for better reliability
BSC_RPC_URL=https://bsc-dataseed1.binance.org

# BSC WebSocket endpoint (OPTIONAL - for real-time events)
# If not provided, bot will use polling mode
BSC_WSS_URL=wss://bsc-ws-node.nariox.org:443

# Chain ID (56 = BSC Mainnet, 97 = BSC Testnet)
CHAIN_ID=56

# ============================================================================
# WALLET CONFIGURATION (Required for AUTO_TRADE)
# ============================================================================

# Your wallet's private key (KEEP THIS SECRET!)
# Never share this or commit it to git!
# Only needed if AUTO_TRADE=true
PRIVATE_KEY=your_private_key_here

# Your wallet address (automatically derived from private key)
WALLET_ADDRESS=your_wallet_address_here

# ============================================================================
# AUTOMATED TRADING CONFIGURATION
# ============================================================================

# Enable automatic trading (true/false)
# - true: Bot will automatically buy and sell tokens
# - false: Bot will only send alerts to Telegram (signal-only mode)
AUTO_TRADE=false

# How much BNB to spend per trade
TRADE_AMOUNT_BNB=0.1

# Maximum number of open positions at once
MAX_CONCURRENT_POSITIONS=3

# Minimum BNB to keep in wallet (safety buffer)
MIN_BNB_BALANCE=0.05

# ============================================================================
# SLIPPAGE & GAS CONFIGURATION
# ============================================================================

# Slippage tolerance (percentage)
# Higher slippage needed for volatile tokens, but increases risk
SLIPPAGE_PERCENT=12

# Gas price multiplier (1.0 = normal, 1.5 = 50% higher)
# Higher = faster execution but more expensive
GAS_PRICE_MULTIPLIER=1.2

# Maximum gas price in Gwei (prevent overpaying during congestion)
MAX_GAS_PRICE_GWEI=20

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

# Stop-loss: Sell if token drops this much (percentage)
STOP_LOSS_PERCENT=30

# Take-profit: Sell if token gains this much (percentage)
TAKE_PROFIT_PERCENT=100

# Use trailing stop-loss that follows price up (true/false)
USE_TRAILING_STOP=true

# Trailing stop distance from peak (percentage)
TRAILING_STOP_PERCENT=20

# Maximum hold time in seconds (6 hours = 21600)
MAX_HOLD_TIME_SECONDS=21600

# Minimum profit before taking profit (won't sell at take-profit if below this)
MIN_PROFIT_PERCENT=10

# ============================================================================
# TOKEN QUALITY FILTERS
# ============================================================================

# Minimum quality score to alert/trade (0-100)
MINIMUM_QUALITY_SCORE=70

# Liquidity filters (in BNB)
MIN_LIQUIDITY_BNB=5
MAX_LIQUIDITY_BNB=500
OPTIMAL_LIQUIDITY_MIN_BNB=10
OPTIMAL_LIQUIDITY_MAX_BNB=100

# Market cap filters (in USD)
MARKET_CAP_MIN_USD=5000
MARKET_CAP_MAX_USD=300000
MARKET_CAP_UPPER_LIMIT_USD=500000

# BNB price in USD (for market cap calculations)
# Update this periodically or integrate price feed
BNB_PRICE_USD=600

# Security filters
REQUIRE_VERIFIED_CONTRACT=false
REQUIRE_OWNERSHIP_RENOUNCED=false
CHECK_HONEYPOT=true
MAX_BUY_TAX_PERCENT=10
MAX_SELL_TAX_PERCENT=15
REQUIRE_LIQUIDITY_LOCKED=false

# Holder distribution filters
MAX_TOP_HOLDER_PERCENT=70
MAX_TOP_10_HOLDERS_PERCENT=90
MIN_HOLDERS_COUNT=50

# ============================================================================
# QUALITY SCORE WEIGHTS (should total 100)
# ============================================================================

SCORE_WEIGHT_LIQUIDITY=25
SCORE_WEIGHT_MARKET_CAP=20
SCORE_WEIGHT_SECURITY=30
SCORE_WEIGHT_HOLDERS=15
SCORE_WEIGHT_CONTRACT=10

# ============================================================================
# TELEGRAM CONFIGURATION (REQUIRED)
# ============================================================================

# Telegram bot token from @BotFather
# Create a bot at https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID
# Get it from @userinfobot or @RawDataBot
TELEGRAM_CHAT_ID=your_chat_id_here

# Alert settings (true/false for each)
SEND_DETECTION_ALERTS=true
SEND_TRADE_ALERTS=true
SEND_EXIT_ALERTS=true
SEND_ERROR_ALERTS=true

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# How often to check positions for exit conditions (seconds)
POSITION_CHECK_INTERVAL=30

# How often to update token prices (seconds)
PRICE_UPDATE_INTERVAL=10

# Retry settings for failed RPC calls
RPC_RETRY_ATTEMPTS=3
RPC_RETRY_DELAY=2

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Verbose logging (more detailed output)
VERBOSE=false

# Save all analyzed tokens (even rejected ones)
SAVE_ALL_TOKENS=false

# ============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# ============================================================================

# Dry run mode (simulate trades without executing)
# Useful for testing without risking real money
DRY_RUN=false

# ============================================================================
# TRADING PROFILES (Optional)
# ============================================================================

# Uncomment ONE profile to use preset configurations
# This will override individual settings above

# Conservative: Lower risk, stricter filters
#TRADING_PROFILE=CONSERVATIVE

# Balanced: Medium risk (default settings)
#TRADING_PROFILE=BALANCED

# Aggressive: Higher risk, looser filters
#TRADING_PROFILE=AGGRESSIVE

# ============================================================================
# ADVANCED: EXTERNAL APIS (Optional)
# ============================================================================

# RugDoc API (for enhanced security checks)
RUGDOC_API_URL=
RUGDOC_API_KEY=

# BSCScan API (for contract verification checks)
BSCSCAN_API_KEY=
